<div class="container">
  <div class="row">
            <img src="/assets/img/burger.png">
          </div>
    <h1 style="text-align: center; color: red">EAT-DA-BURGER!</h1>


  <div class="row">
    <div class="col-sm-6">
      <h3>READY TO EAT!</h3>
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
              {{this.id}}.
              {{this.burger_name}}

              <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                  <button class="btn-primary" type="submit" name="devoured" value="1">DEVOUR IT!</button>
              </form>

              {{burgers/delete-burger}}
          {{/unless}}
        {{/each}}
        </ul>
    </div>

    <div class="col-sm-6">
      <h3>DEVOURED</h3>
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
              {{this.id}}.
              {{this.burger_name}}

              <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="1">
              </form>
          {{/if}}
        {{/each}}
        </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3"></div> 
    <div class="form-group col-md-6">
  
    <form class="create-update-form" action="burgers/create" method="POST">
        <div class="form-group">
         <label for="new_burger" class="red_font">Enter a burger you want to eat </label></center>
          <textarea class="form-control" id="new_burger" name="burger_name"></textarea>
        </div>
        <button class="btn-primary" type="submit">ADD BURGER</button>
      </form>
    </div>